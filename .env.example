# Firebase Configuration
# Get these from your Firebase Project Settings -> General -> Your apps
NEXT_PUBLIC_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_PROJECT_ID=your_project_id
NEXT_PUBLIC_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_APP_ID=your_app_id

# Database Configuration (MongoDB)
# Used for database connections (if applicable)
NEXT_PUBLIC_MONGODB_USER=your_mongodb_user
NEXT_PUBLIC_MONGODB_PASS=your_mongodb_password
MONGODB_URI=mongodb+srv://your_mongodb_user:your_mongodb_password@cluster0.mongodb.net/nexthire?retryWrites=true&w=majority

# AI Model Keys (NVIDIA)
# Get your API key from https://build.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here
